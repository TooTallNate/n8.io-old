.article-title
  h1= article.title
  strong
    | Published: 
    date = article.date
    span(title=strftime('%B %d, %Y %H:%M UTC', date))= strftime('%Y.%m.%d', date)
.article!= article.html

#disqus_thread
script(type="text/javascript")
  var disqus_shortname = 'tootallnate';
  var disqus_developer = 1; // dev mode
  var disqus_title = !{JSON.stringify(article.title)};
  var disqus_url = 'https://tootallnate.net/#{article.name}';

  (function() {
      var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
